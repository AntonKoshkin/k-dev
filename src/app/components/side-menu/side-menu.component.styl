.side-menu
	position fixed
	top 0
	left 0
	width 300px
	background-color forestgreen
	height 100%
	transform translateX(-50%)
	transition transform .3s
	
	&--opened
		transform translateX(0)
	
	&__close-btn
		width 50px
		height 50px
		position absolute
		top 0
		right 0
	
	&__list
		list-style-type none