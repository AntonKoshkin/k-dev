@import '../../../styles/mixins'
@import '../../../styles/variables'

.portfolio
	display flex
	flex-direction column
	align-items stretch
	margin-left -5px
	margin-right -5px
	
	+media(gt-xs)
		flex-direction row
		flex-wrap wrap

	&__links
		padding-left 20px
		padding-right 20px
		padding-bottom 10px
	
	&__item
		display flex
		flex-direction column
		align-items stretch
		position relative
		z-index 1
		transition transform .3s
		cursor pointer
		margin-left 5px
		margin-right 5px
		box-sizing border-box

		+media(gt-xs)
			// margin-right 20px
			margin-bottom 10px
		
		+media(sm)
			width calc(50% - 10px)
		
		+media(md)
			width calc(33.33% - 10px)
		
		+media(gt-md)
			width calc(25% - 10px)
		
		&:not(:last-child)
			+media(xs)
				margin-bottom 10px

		// &:nth-child(2n)
		// 	+media(sm)
		// 		margin-right 0
			
		// &:nth-child(3n)
		// 	+media(md)
		// 		margin-right 0
			
		// &:nth-child(4n)
		// 	+media(gt-md)
		// 		margin-right 0
		
		&:hover
			transform scale(1.05)
			z-index 2
	
	&__header
		margin-bottom 0
	
	&__title
		margin-bottom 0
	
	&__text
		flex-grow 1
		color gray-text
