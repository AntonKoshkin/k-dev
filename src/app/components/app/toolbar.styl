@import '../../../styles/variables'
@import '../../../styles/resets'
@import '../../../styles/mixins'

.toolbar
	box-shadow 0 3px 5px -1px rgba(black, .2),
		0 6px 10px 0 rgba(black, .14),
		0 1px 18px 0 rgba(black, .12)

	&__burger
		@extend $btn-reset
		size 40px
		
		color white
		cursor pointer
		display flex
		justify-content center
		align-items center
		border-radius 3px
		
		+media(gt-sm)
			display none
		
		&:hover
			background-color rgba(black, .1)
	
	&__title
		font-size 1.5rem
		margin-left 10px
		font-weight 500
		flex-grow 1
	
	&__menu
		display none
		
		+media(gt-sm)
			display block
	
	&__list
		list-style-type none
		display flex
	
	&__link
		position relative
		outline none
		font-weight 400
		
		&--active
			text-decoration underline